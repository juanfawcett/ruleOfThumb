/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": [],
    "paths": {
      "@src/*": ["./*"],
      "@app/*": ["app/*"],
      "@core/*": ["app/core/*"],
      "@environment": ["environments/environment.ts"],
      "@modules/*": ["app/modules/*"],
      "@shared/*": ["app/core/shared/*"]
    }
  },
  "files": ["src/main.ts", "src/polyfills.ts"],
  "include": ["src/**/*.d.ts"]
}
